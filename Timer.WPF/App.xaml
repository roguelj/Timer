
<prism:PrismApplication
        x:Class="Timer.WPF.App"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/">

    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Styles\Light\ColourDictionary.xaml" x:Name="ThemeResourceDictionary" />
                
                <ResourceDictionary Source="Styles\Common\ControlStyles.xaml" />
                <ResourceDictionary Source="Styles\Common\Templates.xaml" />
                
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
    
</prism:PrismApplication>

