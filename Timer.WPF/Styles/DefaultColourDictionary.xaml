<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  - - - - - - - - - -->
    <!-- Colours -->


    <Color x:Key="ContainerBackgroundColor">#FFEEEEEE</Color>
    <Color x:Key="SubContainerBackgroundColor">#FFEEEEEE</Color>
    <Color x:Key="ActionElementBackgroundColour">#FFEEEEEE</Color>
    <Color x:Key="ActionElementForegroundColour">#FF000000</Color>


    
    
    <!--  - - - - - - - - - -->
    <!-- Brushes -->

    <!-- Windows and Dialogs -->
    <SolidColorBrush x:Key="DialogBackgroundBrush" Color="{StaticResource ContainerBackgroundColor}"/>


    <!-- Buttons -->
    <SolidColorBrush x:Key="ActionElementBackgroundBrush" Color="{StaticResource ActionElementBackgroundColour}"/>
    <SolidColorBrush x:Key="ActionElementForegroundBrush" Color="{StaticResource ActionElementForegroundColour}"/>

    
</ResourceDictionary>